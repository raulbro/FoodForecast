<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="cs428.foodforecast.FiltersFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/filter_include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Include it" />
    <Button
        android:id="@+id/filter_avoid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_include_title"
        android:text="Avoid it" />
    <Button
        android:id="@+id/filter_equptment_title"
        android:layout_width="match_parent"
        android:layout_below="@id/filter_avoid_title"
        android:layout_height="wrap_content"
        android:text="Equiptement" />
    <Button
        android:id="@+id/filter_prep_time_title"
        android:layout_width="match_parent"
        android:layout_below="@id/filter_equptment_title"
        android:layout_height="wrap_content"
        android:text="Prep Time" />

</RelativeLayout>
